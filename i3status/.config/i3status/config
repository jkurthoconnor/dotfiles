# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ

general {
        output_format = "i3bar"
        colors = true
        color_good = "#b8bb26"
        color_degraded = "#fabd2f"
        color_bad = "#fb4934"
        interval = 5
}


# order += "ipv6"
# order += "disk /"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "%essid %ip %quality"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = ""
}

battery all {
        format = "%status %percentage"
        format_down = ""
}

tztime local {
        format = "%Y%m%d %H%M  "
}

cpu_usage {
        format = "%usage"
}

load {
        format = "%1min %5min %15min"
}

disk "/" {
        format = "%avail"
}

cpu_temperature "0" {
        format = "%degreesC"
}

#vim:filetype=i3
